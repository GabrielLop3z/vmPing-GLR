<Window x:Class="vmPing.UI.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:resource="clr-namespace:vmPing.Properties"
        mc:Ignorable="d"
        Title="vmPing"
        UseLayoutRounding="True"
        Height="Auto"
        Width="480"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height"
        ShowInTaskbar="False">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="60"
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="16" />
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource Theme.Window.GlassBackground}"
            BorderBrush="{DynamicResource Theme.Card.Border}"
            BorderThickness="1"
            CornerRadius="16"
            ClipToBounds="True">
        <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Icon and text -->
        <Grid Grid.Row="0" Margin="24,24,24,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Border Width="48" Height="48" CornerRadius="24" Background="#F3F4F6" VerticalAlignment="Top">
                <Image x:Name="MessageImage"
                       Source="{StaticResource icon.exclamation-triangle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Width="24"
                       Height="24"/>
            </Border>

            <StackPanel Grid.Column="1" Margin="16,4,0,0">
                <TextBlock x:Name="MessageHeader"
                           Text="Warning"
                           Foreground="{DynamicResource Theme.Text.Primary}"
                           FontSize="18"
                           FontFamily="Segoe UI, Tahoma, Arial"
                           FontWeight="Bold"/>
                <TextBlock x:Name="MessageBody"
                           FontSize="14"
                           FontFamily="Segoe UI, Tahoma, Arial"
                           Margin="0,8,0,0"
                           Foreground="{DynamicResource Theme.Text.Secondary}"
                           LineHeight="20"
                           d:Text="This is warning text"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <Border Grid.Row="1"
                Background="Transparent"
                BorderBrush="{DynamicResource Theme.Card.Border}"
                BorderThickness="0,1,0,0"
                Padding="16">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="Cancel"
                        Style="{StaticResource ButtonStandardStyle}"
                        Width="100"
                        Height="32"
                        IsCancel="True"
                        Content="Cancelar" />
                <Button x:Name="OK"
                        Style="{StaticResource ButtonStandardStyle}"
                        Margin="12,0,0,0"
                        Click="OK_Click"
                        Width="100"
                        Height="32"
                        Background="#3B82F6"
                        Foreground="White"
                        IsCancel="{Binding Visibility, ElementName=Cancel, Converter={StaticResource InverseHiddenToBoolConverter}}"
                        Content="Aceptar" />
            </StackPanel>
        </Border>
    </Grid>
    </Border>
</Window>
