<Window x:Class="vmPing.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:classes="clr-namespace:vmPing.Classes"
        xmlns:c="clr-namespace:vmPing.Controls"
        xmlns:resource="clr-namespace:vmPing.Properties"
        Title="vmPing GLR"
        UseLayoutRounding="False"
        Width="800"
        MinHeight="200"
        MinWidth="350"
        Loaded="Window_Loaded"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing"
        ContentRendered="Window_ContentRendered"
        IsVisibleChanged="Window_IsVisibleChanged"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Segoe UI"
        FontSize="14">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="10" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Override default context menu animation: set to no animation -->
        <PopupAnimation x:Key="{x:Static SystemParameters.MenuPopupAnimationKey}">None</PopupAnimation>

        <!-- Template for hostname textbox -->
        <ControlTemplate x:Key="TextBoxControlTemplate" TargetType="{x:Type TextBox}">
            <Grid>
                <Border x:Name="border"
                        CornerRadius="0"
                        SnapsToDevicePixels="True"
                        Background="{TemplateBinding Background}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}">
                    <ScrollViewer x:Name="PART_ContentHost"/>
                </Border>
                <TextBlock x:Name="placeholderText"
                           Text="Introduce un nombre de host o IP"
                           Visibility="Hidden"
                           FontSize="12"
                           Opacity="0.3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Padding="5,0,0,0"
                           IsHitTestVisible="False"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#333388"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="Text" Value=""/>
                        <Condition Property="IsKeyboardFocused" Value="True"/>
                    </MultiTrigger.Conditions>
                    <MultiTrigger.Setters>
                        <Setter Property="Visibility" TargetName="placeholderText" Value="Visible"/>
                    </MultiTrigger.Setters>
                </MultiTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="{DynamicResource Theme.Window.GlassBackground}"
            BorderBrush="{DynamicResource Theme.Card.Border}"
            BorderThickness="1"
            CornerRadius="{Binding Source={x:Static SystemParameters.WindowCornerRadius}}"
            ClipToBounds="True">
        <Grid>
        <DockPanel Background="Transparent">
            <!-- Custom Title Bar -->
            <Grid x:Name="TitleBarGrid" DockPanel.Dock="Top" Height="32" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0" VerticalAlignment="Center" IsHitTestVisible="False">
                    <Image Source="/vmPing.ico" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="vmPing GLR" Foreground="{DynamicResource Theme.Text.Primary}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Click="Minimize_Click" Style="{StaticResource TitleBarButtonStyle}">
                        <Path Data="M 0,0 L 10,0" Stroke="{DynamicResource Theme.Text.Primary}" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="14,15,14,0"/>
                    </Button>
                    <Button Click="Maximize_Click" Style="{StaticResource TitleBarButtonStyle}">
                        <Path Data="M 0,0 L 10,0 L 10,10 L 0,10 Z" Stroke="{DynamicResource Theme.Text.Primary}" StrokeThickness="1" Fill="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="14,11"/>
                    </Button>
                    <Button Click="Close_Click" Style="{StaticResource TitleBarCloseButtonStyle}">
                        <Path Data="M 0,0 L 10,10 M 10,0 L 0,10" Stroke="{DynamicResource Theme.Text.Primary}" StrokeThickness="1.5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="14,10"/>
                    </Button>
                </StackPanel>
            </Grid>
        <StatusBar x:Name="StatusBarControl" DockPanel.Dock="Bottom" Background="Transparent" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource Theme.Card.Border}" Height="30">
            <StatusBarItem HorizontalAlignment="Left" Margin="10,0">
                <TextBlock Text="vmPing Pro Edition" FontSize="11" Foreground="{DynamicResource Theme.Text.Secondary}" VerticalAlignment="Center" FontWeight="Medium"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right" Margin="10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Developed by Ryan Smith | Optimized by " FontSize="11" Foreground="{DynamicResource Theme.Text.Secondary}" VerticalAlignment="Center"/>
                    <TextBlock Text="&lt; Gabriel /&gt;" FontSize="11" Foreground="{DynamicResource Theme.Accent}" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Menu bar -->
        <Menu x:Name="MenuBar" DockPanel.Dock="Top"
              FontStretch="Normal"
              Background="Transparent"
              BorderThickness="0,0,0,1"
              BorderBrush="{DynamicResource Theme.Card.Border}">
            <Menu.Resources>
                <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource MenuItemStyle}"/>
            </Menu.Resources>
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch" LastChildFill="False" Background="Transparent"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            
            <!-- Menu: Add Probe -->
            <MenuItem x:Name="AddProbeMenu">
                <MenuItem.Header>
                    <AccessText Text="Añadir" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource Theme.Text.Primary}"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="{StaticResource icon.add}" VerticalAlignment="Center" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>

            <!-- Menu: Columns -->
            <MenuItem>
                <MenuItem.Header>
                    <AccessText Text="Columnas" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="{StaticResource icon.columns-grid}" VerticalAlignment="Center" Width="14" Height="14"/>
                </MenuItem.Icon>
                <!-- Columns slider -->
                <StackPanel Orientation="Horizontal">
                    <Label Content="{Binding ElementName=ColumnCount, Path=Value}"
                           Margin="0,0,15,0"
                           Width="30"
                           FontSize="14"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"/>
                    <Slider Name="ColumnCount"
                            Style="{DynamicResource SliderStyle}"
                            ValueChanged="ColumnCount_ValueChanged"
                            Minimum="1"
                            Maximum="10"
                            Value="3"
                            TickFrequency="1"
                            SmallChange="1"
                            TickPlacement="BottomRight"
                            IsSnapToTickEnabled="True"
                            Width="200"
                            Foreground="#202020"
                            Margin="0,8"/>
                </StackPanel>
            </MenuItem>

            <!-- Menu: Start/Stop All -->
            <MenuItem x:Name="StartStopMenu">
                <MenuItem.Header>
                    <AccessText Name="StartStopMenuHeader"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="{Binding Path=(classes:Probe.ActiveCount), Converter={StaticResource ProbeCountToGlobalStartStopText}}"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Name="StartStopMenuImage"
                           VerticalAlignment="Center"
                           Width="14" Height="14"
                           Source="{Binding Path=(classes:Probe.ActiveCount), Converter={StaticResource ProbeCountToGlobalStartStopIcon}}"/>
                </MenuItem.Icon>
            </MenuItem>

            <!-- Menu: Main menu dropdown -->
            <MenuItem Width="40"
                      DockPanel.Dock="Right"
                      Template="{StaticResource TopLevelHeaderNoPaddingTemplate}">
                <MenuItem.Icon>
                    <Image Source="{StaticResource icon.chevron-circle-down}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="16" Height="16"/>
                </MenuItem.Icon>

                <!-- Menu: Font Size Slider -->
                <MenuItem>
                    <MenuItem.Header>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Tamaño de Texto" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding ElementName=FontScaleSlider, Path=Value, StringFormat={}{0:P0}}" Width="40" VerticalAlignment="Center" FontSize="11"/>
                                <Slider x:Name="FontScaleSlider" Width="140" Minimum="0.8" Maximum="2.0" Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GlobalTextScale}" 
                                        TickFrequency="0.1" IsSnapToTickEnabled="True" SmallChange="0.1"/>
                            </StackPanel>
                        </StackPanel>
                    </MenuItem.Header>
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.pencil-black}" Width="16" Height="16" Opacity="0.5"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <!-- Menu: Options -->
                <MenuItem Name="OptionsMenu"
                          Header="Opciones"
                          InputGestureText="F10">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.options}" VerticalAlignment="Center" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <!-- Menu: Status history -->
                <MenuItem Name="StatusHistoryMenu" Header="Historial de Estado" InputGestureText="F12">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.status-history}" VerticalAlignment="Center" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Pantalla Completa" Name="FullScreenMenu" InputGestureText="F11">
                    <MenuItem.Icon>
                         <Image Source="{StaticResource icon.vmping-logo-simple}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Modo Compacto" Name="CompactModeMenu" InputGestureText="F9">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.columns-grid}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Mostrar/Ocultar Panel" Click="ToggleDashboard_Click">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.vmping-logo-simple}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!-- Menu: Input addresses-->
                <MenuItem Name="MultiInputMenu" Header="Entrada Múltiple" InputGestureText="F2">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.input-addresses}" VerticalAlignment="Center" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!-- Menu: Popup alerts -->
                <MenuItem Header="Alertas Emergentes">
                    <MenuItem Name="PopupNever"
                               Header="Nunca"
                               Click="PopupNever_Click"
                               IsCheckable="True"/>
                    <MenuItem Name="PopupWhenMinimized"
                               Header="Al Minimizar"
                               Click="PopupWhenMinimized_Click"
                               IsCheckable="True"/>
                    <MenuItem Name="PopupAlways"
                               Header="Siempre"
                               Click="PopupAlways_Click"
                               IsCheckable="True"/>
                </MenuItem>
                <Separator />
                <!-- Menu: Favorite sets-->
                <MenuItem Header="Favoritos" x:Name="FavoritesMenu">
                    <MenuItem Header="Guardar Favorito" Click="CreateFavorite_Click">
                        <MenuItem.Icon>
                            <Image Source="{StaticResource icon.new-favorite}" VerticalAlignment="Center" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Administrar Favoritos" Click="ManageFavorites_Click">
                        <MenuItem.Icon>
                            <Image Source="{StaticResource icon.favorite}" VerticalAlignment="Center" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                </MenuItem>
                <!-- Menu: Aliases-->
                <MenuItem Header="Alias" x:Name="AliasesMenu">
                    <MenuItem Header="Administrar Alias" Click="ManageAliases_Click">
                        <MenuItem.Icon>
                            <Image Source="{StaticResource icon.alias}" VerticalAlignment="Center" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                </MenuItem>
                <Separator />
                <!-- Menu: Traceroute -->
                <MenuItem Header="Trazar Ruta" x:Name="TracerouteMenu" InputGestureText="Ctrl-T">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.route}" VerticalAlignment="Center" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!-- Menu: Flood host -->
                <MenuItem Header="Inundar Host (Flood)" x:Name="FloodHostMenu" InputGestureText="Ctrl-F">
                    <MenuItem.Icon>
                        <Image Source="/Resources/bomb-16.png" VerticalAlignment="Center" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!-- Menu: Network Scan -->
                <MenuItem Header="Escanear Red" x:Name="NetworkScanMenu">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.input-addresses}" VerticalAlignment="Center" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!-- Menu: New instance -->
                <MenuItem Header="Nueva Instancia" x:Name="NewInstanceMenu" InputGestureText="Ctrl-N">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.vmping-logo-simple}" VerticalAlignment="Center" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <!-- Menu: Update -->
                <MenuItem Header="Buscar Actualizaciones" x:Name="UpdateMenu">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.cloud-download}" VerticalAlignment="Center" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!-- Menu: Help -->
                <MenuItem Header="Ayuda" x:Name="HelpMenu" InputGestureText="F1">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource icon.question-circle}" VerticalAlignment="Center" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Dashboard Section -->
        <Border DockPanel.Dock="Top" 
                Background="{DynamicResource Theme.Card.Background}" 
                BorderThickness="0,0,0,1" 
                BorderBrush="{DynamicResource Theme.Card.Border}"
                Height="90"
                Name="DashboardBorder"
                Visibility="Visible">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Circular Health Indicator (Simulated) -->
                <Border Grid.Column="0" Background="#F8FAFC" CornerRadius="12" Margin="0,0,15,0" BorderThickness="1" BorderBrush="{DynamicResource Theme.Card.Border}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Donut Chart Visualization -->
                        <Grid Grid.Column="0" Margin="15,5">
                            <Ellipse Width="50" Height="50" StrokeThickness="6" Stroke="#E2E8F0"/>
                            <Ellipse Width="50" Height="50" StrokeThickness="6" Stroke="#3B82F6" StrokeDashArray="3 1" RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding ElementName=Dash_TotalNodes, Path=Text}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1E293B"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">
                            <TextBlock Text="ESTADO GENERAL" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                            <TextBlock Text="Monitoreo Activo" FontSize="14" FontWeight="Bold" Foreground="#0F172A"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,0,6,0"/>
                                <TextBlock Text="Sistema en línea" FontSize="11" Foreground="#10B981"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Right: Detailed Stats Cards -->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Active -->
                    <Border Grid.Column="0" Background="#F0FDF4" CornerRadius="10" Margin="0,0,8,0" Padding="12" BorderThickness="1" BorderBrush="#BBF7D0">
                        <DockPanel>
                            <Border Background="#DCFCE7" Width="32" Height="32" CornerRadius="8" DockPanel.Dock="Left" VerticalAlignment="Center">
                                <Image Source="{StaticResource icon.check-circle-green}" Width="16" Height="16"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                                <TextBlock Text="ACTIVOS" FontSize="10" FontWeight="Bold" Foreground="#15803D" Opacity="0.8"/>
                                <TextBlock Name="Dash_UpNodes" Text="0" FontSize="18" FontWeight="Bold" Foreground="#15803D"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Down -->
                    <Border Grid.Column="1" Background="#FEF2F2" CornerRadius="10" Margin="4,0,4,0" Padding="12" BorderThickness="1" BorderBrush="#FECACA">
                        <DockPanel>
                            <Border Background="#FEE2E2" Width="32" Height="32" CornerRadius="8" DockPanel.Dock="Left" VerticalAlignment="Center">
                                <Image Source="{StaticResource icon.exclamation-circle}" Width="16" Height="16"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                                <TextBlock Text="CAÍDOS" FontSize="10" FontWeight="Bold" Foreground="#B91C1C" Opacity="0.8"/>
                                <TextBlock Name="Dash_DownNodes" Text="0" FontSize="18" FontWeight="Bold" Foreground="#B91C1C"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Latency -->
                    <Border Grid.Column="2" Background="#EFF6FF" CornerRadius="10" Margin="8,0,0,0" Padding="12" BorderThickness="1" BorderBrush="#BFDBFE">
                        <DockPanel>
                            <Border Background="#DBEAFE" Width="32" Height="32" CornerRadius="8" DockPanel.Dock="Left" VerticalAlignment="Center">
                                <Image Source="{StaticResource icon.route}" Width="16" Height="16" Opacity="0.6"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                                <TextBlock Text="LATENCIA" FontSize="10" FontWeight="Bold" Foreground="#1D4ED8" Opacity="0.8"/>
                                <TextBlock Name="Dash_AvgLatency" Text="0 ms" FontSize="18" FontWeight="Bold" Foreground="#1D4ED8"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                    
                    <!-- Hidden total node for binding -->
                    <TextBlock Name="Dash_TotalNodes" Visibility="Collapsed" Text="0"/>
                </Grid>
            </Grid>
        </Border>


        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled" BorderThickness="0" Padding="0">
            <ItemsControl Name="ProbeItemsControl" 
                          IsTabStop="False" 
                          Focusable="False" 
                          BorderThickness="0" 
                          Margin="4">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ViewColumnCount}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource Theme.Card.Border}" BorderThickness="1" Margin="6" CornerRadius="12" SnapsToDevicePixels="True"
                                Background="{Binding Status, Converter={StaticResource ProbeStatusToBackgroundBrushConverter}}"
                                RenderTransformOrigin="0.5,0.5"
                                MouseLeftButtonUp="Card_Click">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" Color="#000000" Opacity="0.1" ShadowDepth="1" Direction="270" RenderingBias="Performance"/>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Border.Style>
                            <Grid Name="gridItemsControl">
                                <Grid.LayoutTransform>
                                    <ScaleTransform ScaleX="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GlobalTextScale}"
                                                    ScaleY="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=GlobalTextScale}"/>
                                </Grid.LayoutTransform>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
    
                                <!-- Ping output section -->
                                <DockPanel AllowDrop="True" Drop="Probe_Drop">
    
                                    <!-- Ping title bar / button section -->
                                    <Grid DockPanel.Dock="Top">
                                        <Grid.Style>
                                            <Style TargetType="{x:Type Grid}">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=gridItemsControl, Path=IsMouseOver}" Value="True">
                                                        <Setter Property="Background" Value="#0DFFFFFF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
    
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
    
                                        <!-- Alias section -->
                                        <Label Name="txtEditAlias"
                                               Content="{Binding Alias, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}"
                                               Background="Transparent"
                                               FontSize="13"
                                               VerticalContentAlignment="Center"
                                               Padding="10,4"
                                               Margin="0"
                                               FontWeight="Bold"
                                               Foreground="{Binding Status, Converter={StaticResource ProbeStatusToAliasBrushConverter}}"
                                               AllowDrop="True" Drop="Probe_Drop" PreviewMouseMove="ProbeTitle_PreviewMouseMove">
                                        </Label>
    
                                        <!-- Button: Remove probe -->
                                        <Button Grid.Column="3"
                                                Padding="8,4"
                                                Background="Transparent"
                                                HorizontalAlignment="Right"
                                                IsTabStop="False"
                                                ToolTip="Cerrar"
                                                Click="RemoveProbe_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Name="controlButton_border" Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" CornerRadius="0,8,0,0">
                                                        <Image Name="controlButton_image" Source="{StaticResource icon.window-close-black}" Width="12" Height="12" Opacity="0.6"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="controlButton_border" Property="Background" Value="#EF4444"/>
                                                            <Setter TargetName="controlButton_image" Property="Source" Value="{StaticResource icon.window-close-white}"/>
                                                            <Setter TargetName="controlButton_image" Property="Opacity" Value="1"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=gridItemsControl, Path=IsMouseOver}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
    
                                        <!-- Button: Isolated view -->
                                        <Button Grid.Column="2" Padding="8,4" Background="Transparent" Click="IsolatedView_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Name="controlButton_border" Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                        <Image Source="{StaticResource icon.window-restore-black}" Width="12" Height="12" Opacity="0.6"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="controlButton_border" Property="Background" Value="#3B82F6"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=gridItemsControl, Path=IsMouseOver}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
    
                                        <!-- Button: Edit alias -->
                                        <Button Grid.Column="1" Padding="8,4" Background="Transparent" Click="EditAlias_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Name="controlButton_border" Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                        <Image Source="{StaticResource icon.pencil-black}" Width="12" Height="12" Opacity="0.6"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="controlButton_border" Property="Background" Value="#10B981"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=gridItemsControl, Path=IsMouseOver}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
    
                                    <!-- Ping statistics -->
                                    <Grid DockPanel.Dock="Bottom" Margin="5,0,5,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.Style>
                                            <Style TargetType="{x:Type Grid}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=Type}" Value="Ping">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=Statistics.Sent}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>

                                        <!-- ENV Badge -->
                                        <Border Grid.Column="0" Background="#F3F4F6" CornerRadius="6" Padding="6,2" Margin="0,0,4,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ENV" FontSize="9" FontWeight="Bold" Foreground="#6B7280" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Statistics.Sent}" FontSize="10" FontWeight="Bold" Foreground="#374151"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- REC Badge -->
                                        <Border Grid.Column="1" Background="#ECFDF5" CornerRadius="6" Padding="6,2" Margin="0,0,4,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="REC" FontSize="9" FontWeight="Bold" Foreground="#10B981" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Statistics.Received}" FontSize="10" FontWeight="Bold" Foreground="#059669"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- PERD Badge -->
                                        <Border Grid.Column="2" Background="#FEF2F2" CornerRadius="6" Padding="6,2">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="PERD" FontSize="9" FontWeight="Bold" Foreground="#EF4444" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Statistics.Lost}" FontSize="10" FontWeight="Bold" Foreground="#B91C1C"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
    
                                    <!-- Main Content: History and Graph layered -->
                                    <Grid>
                                        <!-- Watermark Status Icon -->
                                        <Image Width="180" Height="180" Opacity="0.1" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                            <Image.RenderTransform>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </Image.RenderTransform>
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="{x:Null}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Up">
                                                            <Setter Property="Source" Value="{StaticResource icon.check-circle-green}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Down">
                                                            <Setter Property="Source" Value="{StaticResource icon.exclamation-circle}"/>
                                                            <Setter Property="Opacity" Value="1.0"/> 
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Error">
                                                            <Setter Property="Source" Value="{StaticResource icon.exclamation-triangle}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>

                                        <!-- Latency Sparkline (Background) -->
                                        <Polyline Points="{Binding LatencyHistory, Converter={StaticResource LatencyHistoryToPointsConverter}}"
                                                  Stroke="{Binding Status, Converter={StaticResource ProbeStatusToStatisticsBrushConverter}}"
                                                  StrokeThickness="2"
                                                  Opacity="0.3"
                                                  Stretch="Fill"
                                                  VerticalAlignment="Bottom"
                                                  HorizontalAlignment="Stretch"
                                                  Height="120"
                                                  Margin="0,0,10,10"
                                                  IsHitTestVisible="False">
                                            <Polyline.Style>
                                                <Style TargetType="Polyline">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Polyline.Style>
                                        </Polyline>

                                        <!-- Ping history (Foreground) -->
                                        <c:AutoScrollListBox x:Name="History"
                                                             BorderThickness="0"
                                                             Background="Transparent"
                                                             Foreground="{Binding Status, Converter={StaticResource ProbeStatusToForegroundBrushConverter}}"
                                                             ItemsSource="{Binding History}"
                                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                             FontFamily="Consolas"
                                                             FontSize="{Binding Type, Converter={StaticResource ProbeTypeToFontSizeConverter}}">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type ListBoxItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                                <ContentPresenter Margin="8,1"/>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </c:AutoScrollListBox>
                                    </Grid>
                                </DockPanel>
    
    
                                <!-- vmPing icon -->
                                <Image Source="{StaticResource icon.vmping-logo-simple}" Width="48" Height="48" IsHitTestVisible="False"
                                       Visibility="{Binding IsActive, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                       Opacity="0.05" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    
                                <!-- Hostname and ping button section -->
                                <Grid Grid.Row="1" Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
    
                                    <Border Grid.ColumnSpan="4" Background="#F9FAFB" CornerRadius="6" BorderThickness="1" BorderBrush="#E5E7EB"/>
    
                                    <!-- Status glyph -->
                                    <TextBlock Grid.Column="0" Text="{Binding Status, Converter={StaticResource ProbeStatusToGlyphConverter}}"
                                               FontSize="12" FontFamily="Marlett" VerticalAlignment="Center" Foreground="#4B5563" Padding="8,0,0,0"/>
    
                                    <!-- Hostname textbox -->
                                    <TextBox Name="Hostname" Grid.Column="1" FontWeight="Medium" FontSize="13" VerticalContentAlignment="Center"
                                             Background="Transparent" BorderThickness="0" Padding="5,6"
                                             Text="{Binding Hostname, UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="{Binding IsActive, Converter={StaticResource InverseBooleanConverter}}"
                                             Template="{StaticResource TextBoxControlTemplate}"/>
    
                                    <!-- Category Badge -->
                                    <Border Grid.Column="2" 
                                            HorizontalAlignment="Right"
                                            Background="{DynamicResource Theme.Accent}" 
                                            Opacity="0.8"
                                            CornerRadius="10" 
                                            Padding="8,2" 
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            IsHitTestVisible="False">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Category}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Category}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Category}" FontSize="9" FontWeight="Bold" Foreground="White" Opacity="0.9"/>
                                    </Border>
    
                                    <!-- Ping button -->
                                    <Button Click="ProbeStartStop_Click" Grid.Column="3" Margin="4">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Name="pingButton_border" CornerRadius="4" Padding="12,4" Background="#3B82F6">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="{Binding IsActive, Converter={StaticResource BooleanToImageConverter}}" Width="12" Height="12"/>
                                                        <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStringConverter}}" Visibility="{Binding ElementName=History, Path=ActualWidth, Converter={StaticResource ButtonTextVisibilityConverter}}"
                                                                   Foreground="White" FontSize="11" FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="pingButton_border" Property="Background" Value="#2563EB"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter TargetName="pingButton_border" Property="Background" Value="#EF4444"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
    
            </ItemsControl>
        </ScrollViewer>
        </DockPanel>

        <!-- Modal Overlay -->
        <Grid Name="ProbeDetailsModal" Visibility="Collapsed" Panel.ZIndex="1000">
             <Border Background="#80000000" MouseLeftButtonUp="CloseModal_Click"/>
             <Border Background="White" CornerRadius="16" Width="700" Height="500" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0" RenderTransformOrigin="0.5,0.5">
                 <Border.RenderTransform>
                    <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                 </Border.RenderTransform>
                 <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Visibility, ElementName=ProbeDetailsModal}" Value="Visible">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="0.96" To="1" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.2"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0.96" To="1" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.2"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                 </Border.Style>
                 <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="#1E293B" RenderingBias="Performance"/>
                 </Border.Effect>
                 <Grid ClipToBounds="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" Background="#F8FAFC" Padding="20" BorderThickness="0,0,0,1" BorderBrush="#E2E8F0">
                        <DockPanel>
                            <Button DockPanel.Dock="Right" Click="CloseModal_Click" Content="✕" FontSize="16" Background="Transparent" BorderThickness="0" Foreground="#64748B"/>
                             <StackPanel Orientation="Horizontal">
                                <Image Source="{StaticResource icon.vmping-logo-simple}" Width="32" Height="32" Margin="0,0,15,0"/>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Hostname}" FontSize="24" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,10,0"/>
                                        <Button Content="Copiar" FontSize="10" Padding="8,2" Background="#E2E8F0" Foreground="#475569" BorderThickness="0" Click="CopyHostname_Click" VerticalAlignment="Center">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="10"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Status}" FontSize="14" FontWeight="SemiBold" Foreground="{Binding Status, Converter={StaticResource ProbeStatusToForegroundBrushConverter}}"/>
                                        <TextBlock Text=" - " Foreground="#94A3B8"/>
                                        <TextBlock Text="{Binding Alias}" FontSize="14" Foreground="#64748B"/>
                                    </StackPanel>
                                </StackPanel>
                             </StackPanel>
                        </DockPanel>
                    </Border>
                    
                    <!-- Stats Body -->
                    <Grid Grid.Row="1" Margin="20,20,20,10">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                         </Grid.ColumnDefinitions>
                         <!-- Big Stats Blocks -->
                         <Border Grid.Column="0" Background="#F0FDF4" CornerRadius="10" Margin="5" Padding="15">
                             <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                 <TextBlock Text="ENVIADOS" FontSize="12" Foreground="#15803D" FontWeight="Bold"/>
                                 <TextBlock Text="{Binding Statistics.Sent}" FontSize="32" Foreground="#166534" HorizontalAlignment="Center" FontWeight="Light"/>
                             </StackPanel>
                         </Border>
                         <Border Grid.Column="1" Background="#ECFEFF" CornerRadius="10" Margin="5" Padding="15">
                             <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                 <TextBlock Text="RECIBIDOS" FontSize="12" Foreground="#0E7490" FontWeight="Bold"/>
                                 <TextBlock Text="{Binding Statistics.Received}" FontSize="32" Foreground="#155E75" HorizontalAlignment="Center" FontWeight="Light"/>
                             </StackPanel>
                         </Border>
                         <Border Grid.Column="2" Background="#FEF2F2" CornerRadius="10" Margin="5" Padding="15">
                             <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                 <TextBlock Text="PERDIDOS" FontSize="12" Foreground="#B91C1C" FontWeight="Bold"/>
                                 <TextBlock Text="{Binding Statistics.Lost}" FontSize="32" Foreground="#991B1B" HorizontalAlignment="Center" FontWeight="Light"/>
                             </StackPanel>
                         </Border>
                    </Grid>

                    <!-- Tools Section: Quick Actions -->
                    <Border Grid.Row="2" Margin="25,0" Padding="10" Background="#F1F5F9" CornerRadius="8">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Port:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,5,0"/>
                            <TextBox Name="txtPortNumber" Text="80" Width="50" Padding="4" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                            
                            <!-- Test Port -->
                            <Button Content="Test" Padding="12,5" Background="#3B82F6" Foreground="White" BorderThickness="0" Click="TestPort_Click" Margin="0,0,1,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- Telnet -->
                            <Button Content="Telnet" Padding="12,5" Background="#475569" Foreground="White" BorderThickness="0" Click="Telnet_Click" Margin="5,0,1,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- RDP -->
                            <Button Content="RDP" Padding="12,5" Background="#0EA5E9" Foreground="White" BorderThickness="0" Click="RDP_Click" Margin="5,0,1,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- VNC -->
                            <Button Content="VNC" Padding="12,5" Background="#E11D48" Foreground="White" BorderThickness="0" Click="VNC_Click" Margin="5,0,1,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            
                             <!-- Web -->
                            <Button Content="Web" Padding="12,5" Background="#10B981" Foreground="White" BorderThickness="0" Click="Web_Click" Margin="5,0,1,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- Folder C$ -->
                            <Button Content="Disco C" Padding="12,5" Background="#F59E0B" Foreground="White" BorderThickness="0" Click="Explorer_Click" Margin="5,0,1,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- Shares -->
                            <Button Content="Compartido" Padding="12,5" Background="#8B5CF6" Foreground="White" BorderThickness="0" Click="Shares_Click" Margin="5,0,1,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- Traceroute -->
                            <Button Content="Traceroute" Padding="12,5" Background="#64748B" Foreground="White" BorderThickness="0" Click="Traceroute_Click" Margin="5,0,10,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <TextBlock Name="lblPortStatus" Text="" VerticalAlignment="Center" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- History Log area -->
                    <Grid Grid.Row="3" Background="#F8FAFC" Margin="0,10,0,0">
                         <c:AutoScrollListBox BorderThickness="0" Background="Transparent" ItemsSource="{Binding History}" FontFamily="Consolas" FontSize="13" Margin="10" 
                                              Foreground="#334155"/>
                    </Grid>
                 </Grid>
             </Border>
    </Grid>

        <!-- ADD PROBE MODAL -->
        <Grid Name="AddProbeModal" Visibility="Collapsed" Panel.ZIndex="1100">
            <Border Background="#80000000" MouseLeftButtonUp="AddProbe_Cancel_Click"/>
            <Border Background="White" CornerRadius="12" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                     <TextBlock Text="Añadir Host" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1E293B"/>
                     
                     <TextBlock Text="Hostname / IP" Foreground="#64748B" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,6"/>
                     <TextBox Name="txtAddHostname" Padding="10" FontSize="14" Margin="0,0,0,15" Background="#F1F5F9" BorderThickness="0" TextChanged="AddHostname_TextChanged"/>
                     
                     <TextBlock Text="Alias (Opcional)" Foreground="#64748B" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,6"/>
                     <TextBox Name="txtAddAlias" Padding="10" FontSize="14" Margin="0,0,0,25" Background="#F1F5F9" BorderThickness="0"/>
                     
                     <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                         <Button Content="Cancelar" Click="AddProbe_Cancel_Click" Background="Transparent" Foreground="#64748B" BorderThickness="0" Margin="0,0,10,0" Padding="10,5"/>
                         <Button Content="Añadir" Click="AddProbe_Save_Click" Background="#3B82F6" Foreground="White" Padding="20,10" BorderThickness="0" FontWeight="SemiBold">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                         </Button>
                     </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
    </Grid>
    </Border>
</Window>
