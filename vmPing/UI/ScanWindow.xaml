<Window x:Class="vmPing.UI.ScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Scanner" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">
    <Window.Resources>
        <!-- Simple styles similar to app -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Inputs -->
        <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="8" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="1"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Network Range" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#111827"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Start IP"/>
                        <TextBox x:Name="StartIP" Width="150" Padding="5"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="End IP"/>
                        <TextBox x:Name="EndIP" Width="150" Padding="5"/>
                    </StackPanel>
                    <Button x:Name="BtnScan" Content="Start Scan" VerticalAlignment="Bottom" Click="BtnScan_Click"/>
                </StackPanel>
                <TextBlock x:Name="StatusText" Text="Ready" Margin="0,10,0,0" Foreground="Gray"/>
                <ProgressBar x:Name="ScanProgress" Height="5" Margin="0,5,0,0" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Results -->
        <DataGrid Grid.Row="1" x:Name="ResultGrid" AutoGenerateColumns="False" IsReadOnly="True" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IP Address" Binding="{Binding IP}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Hostname" Binding="{Binding Hostname}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Add Active Hosts to Monitor" Click="BtnAdd_Click"/>
        </StackPanel>
    </Grid>
</Window>
